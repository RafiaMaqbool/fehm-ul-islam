/* style.css */

body {
  margin: 0;
  font-family: 'Georgia', serif;
  background: #f9f9f9;
  color: #222;
  line-height: 1.6;
}

/* Hero Section */
.hero {
  background: url('mosque-bg.jpg') center/cover no-repeat;
  padding: 120px 20px;
  color: #fff;
  text-align: center;
  position: relative;
}

.hero::after {
  content: "";
  position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.55);
  z-index: 0;
}

.hero h1,
.hero p,
.hero .download-btn {
  position: relative;
  z-index: 1;
}

.hero h1 {
  font-size: 3.8rem;
  margin-bottom: 20px;
  font-family: 'Georgia', serif;
  color: #D4AF37;
}

.hero p {
  font-size: 1.3rem;
  max-width: 700px;
  margin: 0 auto 40px;
  color: #f1f1f1;
}

.download-btn {
  background-color: #D4AF37;
  color: #111;
  padding: 14px 32px;
  font-size: 1.1rem;
  text-decoration: none;
  border-radius: 30px;
  font-weight: bold;
  transition: all 0.3s ease;
  display: inline-block;
}

.download-btn:hover {
  background-color: #b9992e;
  transform: translateY(-3px);
  box-shadow: 0 8px 15px rgba(0,0,0,0.3);
}

/* Sections */
section {
  padding: 80px 20px;
  text-align: center;
}

h2 {
  font-size: 2.5rem;
  margin-bottom: 40px;
  color: #333;
  font-family: 'Georgia', serif;
  position: relative;
}

h2::after {
  content: "";
  width: 80px;
  height: 3px;
  background: #D4AF37;
  display: block;
  margin: 10px auto 0;
  border-radius: 2px;
}

/* Grid Layout */
.grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 30px;
  max-width: 1100px;
  margin: 0 auto;
}

.card {
  background: #fff;
  padding: 30px 20px;
  border-radius: 12px;
  border: none;
  box-shadow: 0 5px 20px rgba(0,0,0,0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 25px rgba(0,0,0,0.12);
}

.card h3 {
  font-size: 1.5rem;
  color: #D4AF37;
  margin-bottom: 12px;
}

.card p {
  font-size: 1rem;
  color: #555;
}

/* Footer */
footer {
  background: #111;
  color: #aaa;
  padding: 30px 20px;
  text-align: center;
  font-size: 0.9rem;
  margin-top: 40px;
}
footer p {
  margin: 0;
}
